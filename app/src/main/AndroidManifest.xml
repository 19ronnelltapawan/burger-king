<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.error404.burgerking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:noHistory="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Welcome"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".activities.MasterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.OrderActivity"
            android:label="Burgers"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.CartActivity"
            android:label="Cart"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.MasterActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.SubCategoryActivity" />
    </application>

</manifest>