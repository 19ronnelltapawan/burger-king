<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.error404.burgerking.OrderActivity">

    <TextView
        android:text="@string/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif-smallcaps" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp">

        <RadioButton
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_weight="1"
            android:onClick="onClickRadio"/>

        <RadioButton
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"
            android:onClick="onClickRadio"/>
    </RadioGroup>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText1"
        android:hint="Quantity"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickQuantity"
        tools:ignore="HardcodedText" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:entries="@array/drinks"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:onClick="onClickAdd"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/checkBox"
        tools:ignore="HardcodedText" />

    <Button
        android:text="View Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:onClick="onClickViewItems"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button11"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/button12"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:text="@string/golarge_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:onClick="onClickCheckbox"
        android:enabled="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
